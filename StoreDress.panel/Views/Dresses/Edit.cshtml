@model Dress

@{
    ViewData["Title"] = "Kıyafet Güncelle";
}

<h4>Kıyafet Güncelle</h4>
<hr />
<form asp-action="Edit" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var item in ViewBag.KategoriListesi)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }

                </select>

                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DesignerId" class="control-label"></label>
                <select asp-for="DesignerId" class="form-control">
                    @foreach (var item in ViewBag.TasarimciListesi)
                    {
                        <option value="@item.Id">@item.NameSurname</option>
                    }
                </select>
                <span asp-validation-for="DesignerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageURL" class="control-label"></label>
                <input class="form-control" type="file" name="file" accept="image/*" />
            </div>
            <div class="form-group">
                <label asp-for="IsSelected" class="control-label"></label>
                <input asp-for="IsSelected" />
                <span asp-validation-for="IsSelected" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsBestSeller" class="control-label"></label>
                <input asp-for="IsBestSeller" />
                <span asp-validation-for="IsBestSeller" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </div>

        <div class="col-md-4">
            <textarea asp-for="Description"></textarea>
        </div>

        <div class="col-md-4">
            <img src="~/uploads/dress/@Model.ImageURL" alt="@Model.Name" />
        </div>
    </div>

</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#Description').summernote();
        });
    </script>
}